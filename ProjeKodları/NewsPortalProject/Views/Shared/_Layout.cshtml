
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <div style="margin-left:10px;margin-right:10px;margin-top:30px; border:solid 1px black;border-radius:10px">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" style="padding:10px" href="~/NewsCasts/MainNewsAll">NewsPortal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsCasts/MainNewsAll">News</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsCasts/MainNewsPopuler">
                                Popular and Latest news
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsFavs/UserFavDetail">My Favorite News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsSubscribers/UserAddSubs">My Subscriber News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="~/NewsShares/GetShareTable">My Shared News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Users/UsersDetail">My Profile</a>
                        </li>
                        <li class="nav-item">
                            @Html.Action("SharredNotifation", "NewsShares")

                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Login/LogOut">LogOut</a>
                        </li>
                    </ul>
                    <div style="float:right">
                        <form class="input-group" method="post" action="/NewsCasts/SearchNews">
                            <input id="search" name="query" class="form-control" type="text" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search News Title</button>
                        </form>
                    </div>

                </div>

            </div>
        </nav>
    </div>
    <div class="container-fluid body-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-2">

                    @Html.Action("PartialGetAllCategories", "NewsCategories")
                </div>
                <div class="col-10">
                    @RenderBody()
                </div>
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -NewsPortal Application for Tokuç</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Content/js.js")


</body>
</html>
