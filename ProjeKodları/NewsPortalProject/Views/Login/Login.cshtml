@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<center>

    <div class="card" style="display:inline-block;padding:50px;margin-top:50px">
        <div class="card-title"> <h3>LOGIN</h3>  </div>
        <form method="post">

            <div id="errorMessage" class="text-danger"></div>

            <div class="form-group">
                <label for="Email" class="form-label">Email</label><br />
                <input type="email" class="form-control" name="Email" id="Email" placeholder="" required />

            </div>
            <div class="form-group">
                <label for="Password" class="form-label">Password</label><br />
                <input type="password" class="form-control" name="Password" id="Password" placeholder="" required />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 " style="margin:10px;">
                    <input type="submit" value="LogIn" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>
</center>


<script>
        var errorMessage = '@ViewBag.ErrorMessage';
        if (errorMessage.length > 0) {
            document.getElementById('errorMessage').innerHTML = errorMessage;
        }
</script>
