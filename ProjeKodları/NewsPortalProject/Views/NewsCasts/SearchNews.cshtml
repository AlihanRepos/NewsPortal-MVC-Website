@model List<NewsPortalProject.Models.NewsCast>

@{
    ViewBag.Title = "SearchNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <p>Not Found.</p>
}
else
{
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-6">
                    <div class="card" style="width:100%;margin-top:15px;">
                        <img src="~/Images/NewsImages/@item.MultimediaUrl" class="card-img-top" alt="MultimediaUrl">
                        <div class="card-body">
                            <h3 class="card-title">@item.Title</h3>
                            <p class="card-text">@item.Text.ToString().Substring(0, 200) ....</p>
                            <form method="post" action="/NewsCasts/MainNewsAllDetail">
                                <input type="hidden" name="NewsCastId" value="@item.NewsCastId" />
                                <button class="btn btn-danger" type="submit">Go Details,Comments and Shares</button>
                            </form>
                            <br />




                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

}
